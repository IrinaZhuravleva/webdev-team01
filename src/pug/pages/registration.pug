extends ../layouts/page-layout/page.pug

block variables
	- var title = 'Регистрация';
	- var pageClass = 'content-page';

block content
	.page-wrapper
		.header-wrapper
			+logo('../img/checked-icon/logo-icon.png', 'Супер Сайт')
			.login #[a(href="#!") Вход]

		.container
			.row.justify-content-center
				.col-4
					form.registration-form
						h1.title-1.registration-form-caption Регистрация
						.mb-10
							+notification__error--text('Данный email уже занят', '!#')
						.mb-10
							+inputText("E-mail")
						.mb-30
							+inputText("Пароль")
						+buttonEnter('Регистрация', '', '', 'submit', 'name')

		.container
			.row.justify-content-center
				.col-md-5
					.footer__text.text-center
						p © Юрий Ключевский
						p
							| Создано с 
							span ❤
							|  в 
							a(href='http://webcademy.ru/', target='_blank') WebCademy.ru
							|  в 2018 году