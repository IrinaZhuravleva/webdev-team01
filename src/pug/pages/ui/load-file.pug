extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Загрузка файлов - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Загрузка файлов

			.section-ui

				include ../../sections/load-file.pug
			.title sections/load-file.pug
			pre.
				include ../mixins/_load-file.pug
				.load-file
					form.load-file.form
					+loadFile("Фотография", "Изображение jpg или png, размером больше чем 100х100 пикселей и весом до 2Мб.")
					br
					br
					+loadFile("Прикрепить файл", "jpg, png, pdf, doc, весом до 2Мб.", "radius")
				script(src='../../js/custom-file-input.js')