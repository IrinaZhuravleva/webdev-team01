mixin cardPost(title, link, image)
	.card-post
		.card-post__image.mb-15
			img(src= image, alt="")
		.card-post__title.mb-15 #{title}
		+button('Читать', link)

mixin cardPortfolio(title, link, image)
	.card-portfolio
		.card-portfolio__image.mb-15
			img(src= image, alt="")
		.card-portfolio__title.ml-20.mb-20 #{title}
		+button('Смотреть кейс', link)