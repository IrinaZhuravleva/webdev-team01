mixin inputText(placeholder)
	input.input-text(type='text' placeholder= placeholder)

mixin textarea(placeholder)
	textarea.textarea(type='text' placeholder= placeholder)

mixin labelTextarea(label, placeholder, name)
	label.label #{label}
		textarea.textarea(type='text' placeholder= placeholder name=name)

mixin labelInputText(label, placeholder, name)
	label.label #{label}
		input.input-text(type='text' placeholder= placeholder name=name)
